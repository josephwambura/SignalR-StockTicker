@{
    ViewBag.Title = "Home Page";
}

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">ASP.NET SignalR Stock Ticker Sample</h1>
        <p>A simple fake stock ticker sample for SignalR.</p>
        <p>
            <input type="button" class="btn btn-outline-primary btn-lg" id="open" value="Open Market" />
            <input type="button" class="btn btn-outline-secondary btn-lg" id="close" value="Close Market" disabled="disabled" />
            <input type="button" class="btn btn-outline-danger btn-lg" id="reset" value="Reset" />
        </p>
    </div>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-md-6">
            <h2>Live Stock Table</h2>
            <div id="stockTable">
                <table class="table table-striped table-bordered table-hover table-dark" border="1">
                    <thead>
                        <tr><th>Symbol</th><th>Price</th><th>Open</th><th>High</th><th>Low</th><th>Change</th><th>%</th></tr>
                    </thead>
                    <tbody>
                        <tr class="loading"><td colspan="7">loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Live Stock Ticker</h2>
            <div class="d-flex p-2 bd-highlight">
                <div id="stockTicker">
                    <div class="inner">
                        <ul>
                            <li class="loading">loading...</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr>

</div> <!-- /container -->